{
  "name": "all-our-ideas-webapp",
  "version": "5.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/CitizensFoundation/allourideas.org"
  },
  "description": "All Our Ideas Web App",
  "author": "Matthew J. Salganik and the Trustees of Princeton University. Robert Bjarnason and Citizens Foundation.",
  "license": "BSD-3-Clause",
  "files": [
    "ts-out/**/*",
    "src/types.d.ts",
    "custom_modules/**/*",
    "!custom_modules/**/node_modules/**/*",
    "locales/**/*"
  ],
  "dependencies": {
    "@yrpri/webapp": "9.0.48"
  },
  "type": "module",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/chart.js": "^2.9.41",
    "@types/d3": "^7.4.3",
    "@types/glob": "^8.1.0",
    "@types/google.analytics": "^0.0.45",
    "@types/lodash-es": "^4.17.12",
    "@types/luxon": "^3.3.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.16",
    "@types/recordrtc": "^5.6.14",
    "@types/topojson": "^3.2.6",
    "@types/topojson-client": "^3.1.4",
    "@types/wavesurfer.js": "^6.0.12",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@web/dev-server": "^0.4.1",
    "@web/dev-server-legacy": "^2.1.0",
    "@web/rollup-plugin-html": "^2.1.2",
    "@web/test-runner": "^0.18.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "fetch-mock": "^9.11.0",
    "koa-proxies": "^0.12.4",
    "lit-analyzer": "^2.0.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "prepublishOnly": "npm pack && node repack",
    "publish": "npm pack && node repack && node publish.js https://registry.npmjs.org/",
    "publish_local": "npm pack && node repack && node publish.js http://localhost:4873",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build:watch": "tsc --watch",
    "clean": "rimraf my-element.{d.ts,d.ts.map,js,js.map} test/my-element.{d.ts,d.ts.map,js,js.map} test/my-element_test.{d.ts,d.ts.map,js,js.map}",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod npm run serve",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "checksize": "rollup -c ; cat my-element.bundled.js | gzip -9 | wc -c ; rm my-element.bundled.js"
  }
}
