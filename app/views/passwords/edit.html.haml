%h2= t('user.change_your_password')

%p= t('user.choose_password_below')

-form_for :user, :url  => user_password_path(@user, :token => @user.confirmation_token), :html => { :method => :put } do |form|
  = error_messages_for :user
  %table.left
    %tr
      %td= form.label :password, t('user.password')
      %td= form.password_field :password, :as => :password 
    %tr
      %td= form.label :password_confirmation, t('user.password_confirmation')
      %td= form.password_field :password_confirmation, :as => :password 
    %tr
      %td
      %td= form.submit t('user.save_password_button'), :class => 'form-btn'

