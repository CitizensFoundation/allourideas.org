-if @question
  -@cast_votes_url = @question.earl
  -@results_url = @question.earl + "/results"
  -@manage_url = @question.earl + "/admin"
  -@all_results_url = "#{@results_url}?all=true"
-else
  -@cast_votes_url = "http://#{HOST}/#{@earl.name}"
  -@results_url = "http://#{HOST}/#{@earl.name}" + "/results"
  -@manage_url = "http://#{HOST}/#{@earl.name}" + "/admin"

.vote-nav{:style => "position: relative;"}
  .fleft
    -if @earl && !@earl.logo_file_name.nil?
      = image_tag(@earl.logo.url(:medium))
    -else
      &nbsp;
  %div{:style => "position: absolute; bottom: 0px; right: 0px;"}
    =loc_based_style(link_to(t('vote.cast_votes'), @cast_votes_url), t('vote.cast_votes'))
    %span.grey 
      &nbsp;|&nbsp;
    = loc_based_style(link_to(t('nav.view_results'), @results_url), t('nav.view_results'))
    - if current_user && ( (current_user.owns? @earl) || current_user.admin? )
      %span.grey 
        &nbsp;|&nbsp;
      = loc_based_style(link_to(t('nav.manage_question'), @manage_url), t('nav.manage_question'))

  .clear
