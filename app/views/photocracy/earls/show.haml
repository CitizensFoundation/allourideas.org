.container_16
  #primary_content
    #hd.center
      %h1.no_margin
        =h @question.name
      %p.gray
        Click on the best photo to vote! 
        =link_to 'How does this work?', '#'
      #prompt
        =render(:partial => 'questions/prompt')
    .center.margin_bottom
      =link_to 'Add your own Photo', add_idea_question_url(@question, :format => :js), :class => 'blue button', :id => 'add_photo_button', :question_id => @question.id
      <br /><br />
      =link_to "I can't decide", "#"
.container_12
  #secondary_content
    .grid_4
      %h5.no_margin
        Your <span id="visitor_votes"></span> votes
        %span.normal (average is 12)
      .padding
        %ul#your_votes
    .grid_4.center
      %h5.no_margin
        ="#{@question.attributes['votes_count'].to_i} votes on #{@question.attributes['item_count'] - @question.attributes["inactive_choices_count"]} photos"
      .padding
        =link_to "View all Results", results_question_url(:id => params[:id]), :class => 'button'
    .grid_4
      %h5.no_margin About this survey
      .padding
        .margin_bottom.center
          =image_tag "photocracy/alum_logo.png", :width => 100, :height => 100
          <br />
          Organized by<br />
          %strong Princeton Alumni Association
        .clear
        .center
          =image_tag "photocracy/footer_logos.png", :width => 113, :height => 50
          <br />
          %strong
            Powered by 
            =link_to "photocracy.org", "#"
          <br />
          Photocracy is supported by grants from Google<br />
          and CITP at Princeton University.
  .clear

  #upload_status{:style => 'display:none;', :title => 'Adding a photo'}
    #upload_status_message
      %p Uploading your photo...
      =image_tag "photocracy/indicator.gif"
  
  :javascript
    $(document).ready(function(){
      $('#upload_status').dialog({
        autoOpen: false,
        modal: true,
        width: 400,
        close: function(event, ui) {
          $('#upload_status_message').html("<p>Uploading your photo...</p><img src='/images/photocracy/indicator.gif' />")
        }
      });
    });
